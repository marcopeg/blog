---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.flatMap(post => post.data.tags))];

  return uniqueTags.map(tag => {
    const filteredPosts = allPosts
      .filter(post => post.data.tags.includes(tag))
      .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

    return {
      params: { tag },
      props: { posts: filteredPosts, tag },
    };
  });
}) satisfies GetStaticPaths;

const { posts, tag } = Astro.props;
const tagEntry = await getEntry('tags', tag);
const tagContent = tagEntry ? await render(tagEntry) : null;
const headline = tagEntry?.data.title ?? `Posts tagged with "${tag}"`;
const description = tagEntry?.data.description ?? `${posts.length} ${posts.length === 1 ? 'article' : 'articles'} to explore.`;
---

<Layout title={`Posts tagged with "${tag}"`}>
  <div class="bg-gradient-to-r from-sky-500 via-sky-500 to-sky-600 text-white">
    <div class="max-w-5xl mx-auto px-6 pt-16 pb-20">
      <a href="/blog" class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="w-4 h-4">
          <path d="M15 18l-6-6 6-6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
        Back to index
      </a>
      <h1 class="mt-6 text-4xl md:text-5xl font-extrabold leading-tight">{headline}</h1>
      <p class="mt-4 max-w-3xl text-lg text-white/85">{description}</p>
      <div class="mt-6 flex flex-wrap gap-2 text-sm text-white/80">
        <span class="inline-flex items-center gap-2 rounded-full bg-white/15 px-4 py-2 font-semibold uppercase tracking-[0.25em]">
          #{tag}
        </span>
        <span>{posts.length} {posts.length === 1 ? 'post' : 'posts'}</span>
      </div>
    </div>
  </div>

  <div class="relative -mt-12">
    <div class="max-w-5xl mx-auto px-6 pb-24">
      {tagContent && (
        <section class="mb-12 rounded-3xl border border-white bg-white shadow-2xl shadow-sky-500/10 overflow-hidden">
          <div class="prose prose-lg px-6 py-10 sm:px-10 sm:py-12">
            <tagContent.Content />
          </div>
        </section>
      )}

      {tagEntry?.data.relatedTags && tagEntry.data.relatedTags.length > 0 && (
        <section class="mb-12 rounded-3xl border border-slate-200/70 bg-white p-8 shadow-lg shadow-slate-900/5">
          <h2 class="text-xl font-semibold text-slate-900">Related topics</h2>
          <p class="mt-2 text-slate-600">Expand the thread with these neighbouring ideas.</p>
          <div class="mt-5 flex flex-wrap gap-3">
            {tagEntry.data.relatedTags.map(relatedTag => (
              <a
                href={`/blog/tags/${relatedTag}`}
                class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-4 py-2 text-sm font-semibold text-slate-700 hover:border-sky-200 hover:text-sky-600 transition"
              >
                #{relatedTag}
              </a>
            ))}
          </div>
        </section>
      )}

      <section class="space-y-6">
        {posts.map(post => (
          <article class="group relative overflow-hidden rounded-3xl border border-slate-200/70 bg-white p-8 shadow-lg shadow-slate-900/5 transition transform hover:-translate-y-1">
            <a href={`/blog/posts/${post.slug}`} class="absolute inset-0" aria-label={post.data.title}></a>
            <div class="flex items-center justify-between text-xs font-semibold uppercase tracking-[0.35em] text-slate-400">
              <span>{post.data.author}</span>
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </time>
            </div>
            <h2 class="mt-5 text-3xl font-bold text-slate-900 group-hover:text-sky-600 transition-colors">
              {post.data.title}
            </h2>
            <p class="mt-4 text-slate-600">{post.data.excerpt}</p>
            <div class="mt-6 flex flex-wrap gap-2">
              {post.data.tags.map(postTag => (
                <span
                  class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold uppercase tracking-[0.25em] ${
                    postTag === tag
                      ? 'bg-sky-600 text-white'
                      : 'bg-slate-100 text-slate-600'
                  }`}
                >
                  #{postTag}
                </span>
              ))}
            </div>
          </article>
        ))}
      </section>
    </div>
  </div>
</Layout>
