---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const latestPost = sortedPosts[0];

// Get all unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))].sort();
---

<Layout title="My Blog">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-2">My Blog</h1>
      <p class="text-gray-600">Thoughts on web development, programming, and technology</p>
    </header>

    <!-- Latest Post -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Latest Post</h2>
      {latestPost && (
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <a href={`/blog/posts/${latestPost.slug}`} class="block">
            <h3 class="text-2xl font-bold mb-2 text-blue-600 hover:text-blue-800">{latestPost.data.title}</h3>
            <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
              <span>By {latestPost.data.author}</span>
              <span>â€¢</span>
              <time datetime={latestPost.data.date.toISOString()}>
                {latestPost.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
            </div>
            <p class="text-gray-700 mb-4">{latestPost.data.excerpt}</p>
            <div class="flex flex-wrap gap-2">
              {latestPost.data.tags.map(tag => (
                <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        </article>
      )}
    </section>

    <!-- Tags Section -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Browse by Tag</h2>
      <div class="flex flex-wrap gap-3">
        {allTags.map(tag => (
          <a 
            href={`/blog/tags/${tag}`}
            class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-800 px-4 py-2 rounded-lg transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
