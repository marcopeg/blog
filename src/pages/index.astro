---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Get all unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))].sort();
---

<Layout title="Marco Pegoraro">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-2">Marco Pegoraro</h1>
      <p class="text-gray-600">When it comes to write code you don't need to learn magic spells. Just take a look outside the window and solve your problems with patterns from the real world.</p>
    </header>

    <!-- All Posts -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">All Posts</h2>
      <div class="space-y-6">
        {sortedPosts.map(post => (
          <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <a href={`/blog/posts/${post.slug}`} class="block">
              <h3 class="text-2xl font-bold mb-2 text-blue-600 hover:text-blue-800">{post.data.title}</h3>
              <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
                <span>By {post.data.author}</span>
                <span>â€¢</span>
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
              </div>
              <p class="text-gray-700 mb-4">{post.data.excerpt}</p>
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map(tag => (
                  <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <!-- Tags Section -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Browse by Tag</h2>
      <div class="flex flex-wrap gap-3">
        {allTags.map(tag => (
          <a 
            href={`/blog/tags/${tag}`}
            class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-800 px-4 py-2 rounded-lg transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
